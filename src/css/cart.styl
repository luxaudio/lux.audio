body
  & > cart
    width: 300px
    position: fixed
    top: 0
    left: initial !important
    right: -300px !important
    z-index: 1000
    transition: background-color 420ms ease-in-out, right 420ms ease-in-out

    &:hover
      right: 0 !important

    &.close:hover
      right: -300px !important

  input#open-cart
    display: none

    &:checked
      & ~ cart
        right: 0 !important
