footer
  display table
  .logo
    bottom 50px
  .copyright
    margin-top 80px
    margin-bottom 20px
    display inline-block
  nav
    display table
    margin auto
    padding 10px
    ul
      list-style-type none
      overflow hidden
      padding 0
      margin 0
      float left
      li
        float left
        padding 20px 20px

    &.links
      max-width: 800px
      margin-bottom: 40px

      ul
        column 1/3 3 20px

        li
          width: 100%
          text-align: left
          padding: 5px 20px

      ul:last-child
        li
          text-align: right
