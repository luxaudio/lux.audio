header
  top 0
  left 0
  position fixed
  z-index 100
  min-height 60px
  nav
    display table
    width 100%
    ul
      list-style-type none
      overflow hidden
      padding 0
      margin 0
      float left
      li
        float left
        padding 20px 0 20px 30px
  .call-to-action
    float right
    margin 10px 20px 10px 0
  .logo
    top 10px
  .page-links
    float right
    display block !important

@media (max-width: 800px)
  header
    nav
      ul
        display none

@media (max-width: 600px)
  header
    .logo
      left 40px


