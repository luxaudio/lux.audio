#page-account
  .body
    .content
      padding: 0
      margin: 80px auto
      background-color: #FFF

      +below(600px)
        margin: 0 auto

      .tab-radio
        display: none

        &#referrals-tab ~ .page .referrals
        &#profile-tab ~ .page .profile
        &#orders-tab ~ .page .orders
          opacity: 0
          position: absolute
          top: 0
          left: 0
          transition: opacity 420ms ease-in
          width: 100%
          pointer-events: none
          display: block
          margin-top: 40px

        &#referrals-tab:checked ~ .page .referrals
        &#profile-tab:checked ~ .page .profile
        &#orders-tab:checked ~ .page .orders
          opacity: 1
          position: relative
          pointer-events: auto

        &#referrals-tab:checked ~ .menu .referrals-tab
        &#profile-tab:checked ~ .menu .profile-tab
        &#orders-tab:checked ~ .menu .orders-tab
          border-bottom: 4px solid #3CF3B6

      ul.menu
        background-color: #F8F8F8
        width: 100vw
        padding: 0
        display: table
        max-width: 900px

        +below(600px)
          font-size:.8em

        li
          list-style-type: none
          padding: 0 2em
          max-width: 80px
          vertical-align: middle
          float: left
          display: table

          &:nth-child(4)
            max-width: 100%

          &:last-child
            text-align: right
            float: right

          label
            margin: 0
            display: table
            padding: 12px 0
            position:relative
            top: 4px
            font-weight: bold

          & > *
            cursor: pointer

            &:hover
              font-weight: bold

      .page
        min-height: 300px
        max-width: 550px
        position: relative
        overflow: hidden
        padding: 0 0 80px
        margin: 0 auto

        & > *
          +below(600px)
            padding: 0 20px
            max-width: 100vw

        .profile
          & > div
            margin-bottom: 40px
            max-width: 400px
            width: 100vw
            margin-left: auto
            margin-right: auto

            +below(600px)
              max-width: 300px

            p
              padding-bottom: 10px

          .button-container
            width: 100% !important
            text-align: center

          user-email
          user-name
          user-current-password
          user-password
          user-password-confirm
            display: block
            padding-bottom: 16px
            line-height: 2em
            width: 100%

        p
          margin-bottom: 0

        .share-field
          text-align: centered

          .copied
            display: block

          +below(600px)
            font-size: .8em

            .ref-link
            .copied
              display: block
              width: 100%
              text-align: center

        ul.share-links
          display: table
          padding: 0
          width: 300px
          margin: 0 auto
          margin-bottom: 20px

          li
            list-style-type: none
            column: 1/3 3 0
            text-align: center
            font-size: 2em
            i
              color: #000

        .points-counter
          margin-top: 20px

        .points-tracker
          padding: 0
          width: 100%
          display: table
          position: relative
          overflow: hidden

          li
            list-style-type: none
            position: relative
            margin-left: 60px
            height: 100px

            .points-bar
              position: absolute;
              width: 4px;
              background-color: #EEE;
              left: -42px;
              top: 44px;
              height: 64px;

            h2
              letter-spacing: initial
              margin: 0.5em 0
              font-size: 1.4rem
              position: relative
              top: 4px
              transition: all 1s ease-in-out

              &:before
                content: ''
                display: block
                width: 40px
                height: 40px
                border-radius: 32px
                border: 4px solid #EEE
                position: absolute
                left: -60px
                top: -4px
                transition: all 1s ease-in-out

              &:after
                content: ''
                opacity: 0
                display: block
                width: 24px
                height: 18px
                position: absolute
                left: -52px
                top: 8px
                background-image: url(/img/referral-checkmark.png)
                background-size: contain
                background-repeat: no-repeat
                transition: all 1s ease-in-out

            &.active
              h2
                &:before
                  background-color: #3CF3B6
                  border-color: #3CF3B6

                &:after
                  opacity: 1

          .points-bar
            .points-bar-fill
              width: 100%
              height: 0
              transition: all 1s ease-in-out
              background-color: #3CF3B6

        orders
          order
            display: table
            width: 100%
            padding: 7px 0 20px 0

            h2
              font-size: 1em

            &:not(:last-child)
              border-bottom: 2px solid black
              margin-bottom: 20px

            .order-information
            .address-information
              column 1/2 2 60px

              +below(900px)
                width: 100%

            .order-information
              & > div
                display: table
                width: 100%

                & > *:first-child
                  column 2/5 2 20px

                & > *:last-child
                  column 3/5 2 20px

              lineitems
                display: table
                padding: 20px 0
                width: 100%

                lineitem
                  & > *
                    column 1/8 3 0px
                  & > *:last-child
                    column 3/8 3 0px
                  & > *:first-child
                    column 1/2 3 0px

                  .product-price-container
                    text-align: right

                  .x
                    font-size: .5em !important

              .currency-container
                & > *:last-child
                  text-align: right

              .label.product-currency
                display: inline

            .map
              width: 100%
              height: 200px
              margin 10px 0 20px
