#page-account
  .body
    .content
      h2
        font-size: 1em

      ul.menu
        column 1/5 2 60px
        padding: 0 10px

        li
          list-style-type: none
          margin-bottom: 1em

          hr
            height: 0
            border: 0
            border-bottom: 2px solid #000
            max-width: 30px

          & > *
            cursor: pointer

            &:hover
              font-weight: bold

        +below(600px)
          display: none

      .page
        column 4/5 2 60px
        min-height: 300px
        position: relative
        overflow: hidden

        +below(600px)
          width: 100% !important

        .tab-radio
          display: none

          & + *
            opacity: 0
            position: absolute
            top: 0
            left: 0
            transition opacity 420ms ease-in
            width: 100%
            pointer-events: none

          &:checked + *
            opacity: 1
            position: relative
            pointer-events: auto

        .profile
          & > div
            column 1/2 2 60px

            +below(600px)
              width: 100%
              padding-bottom: 20px

            p
              padding-bottom: 10px

          .button-container
            width: 100% !important
            text-align: center

          user-email
          user-name
          user-current-password
          user-password
          user-password-confirm
            display: block
            padding-bottom: 16px
            line-height: 2em
            width: 100%

          input
            height: 32px
            line-height: 1em
            font-size: 16px
            width: 100%

            -moz-appearance: none !important
            line-height: 1em !important
            vertical-align: middle
            color: #000 !important

            padding: 0
            border-radius: 0
            border-width: 0 !important
            border-bottom: 2px solid #000 !important
            transition: color 420ms ease-in, border-color 420ms ease-in

            &.invalid
              color: #F22469 !important
              border-color: #F22469 !important

            // &.valid
            //   // color: #3DF2B6 !important
            //   border-color: #3DF2B6 !important

            &:-moz-placeholder
              color: #333

            &::-moz-placeholder
              color: #333

            &:-ms-input-placeholder
              color: #333

            &::-webkit-input-placeholder
              color: #333

            &:focus
              outline-width: 0

          .error
            color: #F22469
            font-size: 14px
            padding: 8px 0
            line-height: 1em
            text-align: left
            width: 100%

        p
          margin-bottom: 0

        ul.share-links
          display: table
          padding: 0
          width: 300px
          margin: 0 auto
          margin-bottom: 20px

          li
            list-style-type: none
            column: 1/3 3 0
            text-align: center
            font-size: 2em
            i
              color: #000

        .points-counter
          margin-top: 20px
          text-align: center

        .points-tracker
          padding: 0
          width: 100%
          display: table
          position: relative
          overflow: hidden
          border-radius: 90px

          &:before
            content: ''
            width: 0%
            height: 100%
            position: absolute
            top: 0
            left: 0
            transition: width 420ms ease-in-out
            background: radial-gradient(at top left, rgba(0,212,255,0.5), rgba(0,212,255,0))
            background-color: #11f1b6
            border-top-left-radius: 50px
            border-bottom-left-radius: 50px

          li
            column 1/5 5 0
            list-style-type: none
            text-align: center
            padding: 20px 30px
            height: 90px
            border: 2px solid #000
            position: relative

            &:first-child
              border-top-left-radius: 45px
              border-bottom-left-radius: 45px

              h3
                left: 6px

            &:not(:first-child)
              border-left: 0

            &:not(:last-child)
              h3
                font-size: 1em
                margin-bottom: 0.5em
                position: relative
                top: 3px

              // &:after
              //   content: ''
              //   height: 46px
              //   width: 46px
              //   position: absolute
              //   border-top: 2px solid #000
              //   border-right: 2px solid #000
              //   top: 20px
              //   right: -23px
              //   -webkit-transform: rotate(45deg) skew(30deg, 30deg)
              //   transform: rotate(45deg) skew(20deg, 20deg)
              //   z-index: 100
              //   background-color: #eee

            &:last-child
              border-top-right-radius: 45px
              border-bottom-right-radius: 45px
              position: relative
              left: -2px

              h3
                font-size: 1.2em
                left: -6px

            p
              font-size: .8em
              text-align: center
              display: none

          +below(900px)
            width: 100%

            li
              width: 100%
              column 1 1 0
              border: 2px solid #000
              border-right: 2px solid #000 !important
              border-left: 2px solid #000 !important
              height: 120px

              &:after
                display: none

              &:not(:last-child)
                border-bottom: 0

        .points-tracker-description
          padding: 10px 10px 10px 20px
          display: table
          width: 100%

          li
            column 1/5 5 10px
            list-style-type: none
            position: relative

            p
              text-align: center
              font-weight: bold
              font-size: .8em

        orders
          order
            display: table
            width: 100%
            padding: 7px 0 20px 0

            &:not(:last-child)
              border-bottom: 2px solid black
              margin-bottom: 20px

            .order-information
            .address-information
              column 1/2 2 60px

              +below(900px)
                width: 100%

            .order-information
              & > div
                display: table
                width: 100%

                & > *:first-child
                  column 2/5 2 20px

                & > *:last-child
                  column 3/5 2 20px

              lineitems
                display: table
                padding: 20px 0
                width: 100%

                lineitem
                  & > *
                    column 1/8 3 0px
                  & > *:last-child
                    column 3/8 3 0px
                  & > *:first-child
                    column 1/2 3 0px

                  .product-price-container
                    text-align: right

                  .x
                    font-size: .5em !important

              .currency-container
                & > *:last-child
                  text-align: right

              .label.product-currency
                display: inline

            .map
              width: 100%
              height: 200px
              margin 10px 0 20px

    +below(900px)
      .content
        ul.menu
          column 1/3 2 60px

          li
            list-style-type: none
            margin-bottom: 1em

        .page
          column 2/3 2 60px

