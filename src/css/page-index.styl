#index-hero.hero.parallax
  background: linear-gradient(-180deg, rgba(255,255,255,0.17) 0%, rgba(0,0,0,0.17) 100%)
  background-color: #47ECB9

  .content
    margin-top: 65vh

  .foreground .animated
    margin-top: 20vh
    width: 30vw
    height: auto

    +below(1000px)
      width: 50vw

    +below(600px)
      width: 100vw !important

#app
  background-position: 50% 0%
  height: 130vh
  z-index: 1

  .content
    margin-top: 75vh
    padding: 20px 0
    max-width: 650px

    p
      font-size: 1.25em
      padding: 0 20px

    ul
      width: 300px
      margin: 16px auto
      display: table

      li
        column 1/2 2 20px
        list-style: none
        text-align: center
      p
        font-size: .9em
        letter-spacing: 0.05em

