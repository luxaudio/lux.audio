#page-press
  .body
    .content
      ul
        margin-bottom: 40px

      ul.download-links
        padding: 0

        li
          list-style-type: none
          height: 80px
          padding: 10px
          background-color: $pressBGColor
          position: relative
          display: table
          width: 100%

          .download-icon
            font-size: 40px
            height: 60px
            padding: 10px
            display: inline-block
            background-color: $pressDLIconBGColor
            color: $pressDLIconColor
            text-align: center

          .download-link
            left: 80px
            position: absolute
            height: 30px

          &:nth-child(2n)
            background-color: transparent

      ul.logos
        li
          img
            height: 100%

          .download-link
            position: relative
            top: 12px
            left: 0
            float: right

          +below(600px)
            .download-icon
            .download-link
              width:100%
              text-align: center

            img
              margin: 0 auto


      ul.social
        li
          .download-icon
            width: 60px

          .download-link
            top: 40px

          span
            height: 30px
            display: inline-block
            position: absolute
            left: 80px
            top: 10px

      ul.product-images
        padding: 0

        li
          list-style-type: none
          column 1/3 3 40px
          margin: 20px 0
          padding: 40px
          background-color: $pressBGColor

          a
            width: 100%
            min-height: 200px
            display: block
            background-position: center
            background-size: contain
            background-repeat: no-repeat

          +below(900px)
            column 1/2 2 40px

            a
              width: 100%
              min-height: 100px

