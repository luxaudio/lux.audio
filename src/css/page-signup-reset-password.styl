#page-signup
#page-reset-password
  .body
    background-size: cover
    background-position: center

    height: 105vh

    .content
      display: table
      padding: 0
      margin: 0 auto

      & > *
        column 1/2 2 20px
        float: right !important
        padding: 70px 0px
        margin-top: 20vh

        h1
        p
          color: #FFF

          label:first-child
          label:last-child
            cursor: pointer

        p
          max-width: 480px
          padding: 0 50px
          margin: 0 auto 20px

        a
          max-width: 480px
          padding: 0 50px

        user-name
        user-email
        user-password
          display: block
          margin-bottom: 16px

        input[type=text]
        input[type=password]
        button
          width: 100%
          height: 32px
          line-height: 1em
          font-size: 16px

        input[type=text]
        input[type=password]
          border-width: 0 0 2px 0
          border-radius: 0
          padding-left: 0
          padding-right: 0

        input[type=radio]
          display: none

        button[type=submit]
          width: 100%;
          font-size: 16px !important;
          padding: 22px;
          line-height: 0px !important;
          letter-spacing: .05rem;
          margin: 16px 0;
          background: radial-gradient(at top left, rgba(0,212,255,0.5), rgba(0,212,255,0));
          background-color: #3df2b6;
          border: 0
          text-transform: uppercase
          color: #FFF

          &:hover
            animation: ripple-green 1.5s infinite

        .error
          font-size: 14px
          color: #F22469

        div
          width: 100%

        login
        register
        reset-password
          display: block
          margin-top: 5vh
          max-width: 480px
          padding: 0 50px
          margin: 0 auto

      #register:checked
        & ~ h1
          label:first-child
            color: #3df2b6;

        & ~ login
          display: none

      #login:checked
        & ~ h1
          label:last-child
            color: #3df2b6;

        & ~ register
          display: none

+below(800px)
  #page-signup
  #page-reset-password
    .body
      .content
        & > *
          column 1 1 20px
          float: right !important
          padding: 70px 0px
          margin-top: 20vh


