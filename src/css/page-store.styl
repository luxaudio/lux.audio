.tab-radio
  display: none

  &#store-featured-tab:checked ~ header.store .featured.store-link
  &#store-products-tab:checked ~ header.store .products.store-link
  &#store-apparel-tab:checked ~ header.store .apparel.store-link
  &#store-other-tab:checked ~ header.store .other.store-link
    h2
      &:after
        content: ''
        width: 100%
        background-color: #3DF2B6

header.store
  position: relative
  width: 100vw
  height: 120px
  background-color: #000

  +below(500px)
    height: 90px

  nav
    .store-links
      position: absolute
      right: 24px
      top: 50px

      .store-link
        float: left
        text-align: right
        display: block
        margin-right: 20px

        h2
          position: relative
          &:after
            content: ''
            width: 0
            height: 2px
            position: absolute
            bottom: -2px
            left: 0
            right: 0
            margin: 0 auto
            background-color: transparent
            transition: width 200ms ease-in

          &:hover
            // color: #3DF2B6
            cursor: pointer
            // margin-bottom: 2px
            // border-bottom: 2px solid #FFF

      +below(700px)
        width: 500px
        top: 85px
        max-width: 100vw
        margin: 0 auto
        left: 0
        right: 0
        bottom: 0
        padding: 0 10px

        .store-link
          column 1/4 4 0px
          text-align: center
          bottom: 0
          height: 100%

          h2
            display: inline-block
            font-size: .8em

      +below(500px)
        &.store-links
          top: 60px

.tab-radio
  display: none

  &#store-featured-tab:checked ~ main #page-store .store-featured
  &#store-products-tab:checked ~ main #page-store .store-products
  &#store-apparel-tab:checked ~ main #page-store .store-apparel
  &#store-other-tab:checked ~ main #page-store .store-other
    position: relative
    opacity: 1

#page-store
  .body
    padding-bottom: 0

    .store-tab
      opacity: 0
      position: absolute
      top: 0
      left: 0
      width: 100%
      transition: opacity 420ms ease-in-out

    .store-header
      padding:  40px 0

      h1
      p
        text-align: center

      h1
        margin-bottom: 0

    .store-menu
      background-color: #f8f8f8

      ul
        list-style-type: none
        max-width: 100vw
        width: 450px
        display: table
        margin: 0 auto
        padding: 10px

        li
          & > *
           cursor: pointer

    .store-apparel
      .store-menu
        ul
          li
            column 1/3 3 20px

    .store-other
      .store-menu
        ul
          li
            column 1/2 2 20px


