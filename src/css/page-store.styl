#page-store
  .hero
    height: 110vh
    min-height: 600px

    .content
      width: 50vw
      margin-left: 50vw
      margin-top: 50vh
      color: #000

      +below(800px)
        margin-left: auto
        width: 100vw

    .image1
      background-image: url(/img/store/render-poster.jpg)
      background-size: cover
      background-position: 15% 50%

    .image2
      background-image: url(/img/store/poster-earphones.png)
      background-size: cover
      background-position: 33% 50%

    .gallery-controls
      z-index: 1

      .button
        width: 36px
        height: 36px
        border-color: #FFF
        line-height: 1.8em !important

  .body
    .content
      background-color: #FFF
      margin: 40px auto
      padding: 40px

      product
        column 1/3 3 40px
        display: block

        +below(600px)
          column 1/2 2 40px

        +below(400px)
          column 1 1 40px

        .description
          text-align: left

        .button
          height: 56px
          font-size: 16px
          border: 0
          width: 100%
          text-align: center
