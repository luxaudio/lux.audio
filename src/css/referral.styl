.points-counter
  margin-top: 20px

.points-tracker
  padding: 0
  width: 100%
  display: table
  position: relative
  overflow: hidden
  margin-bottom: 40px !important

  li
    list-style-type: none
    position: relative
    margin-left: 60px
    height: 100px

    .points-bar
      position: absolute
      width: 4px
      background-color: #EEE
      left: -42px
      top: 44px
      height: 64px

    h2
      font-size: 1.4rem

    & > *:first-child
      letter-spacing: initial
      margin: 0.5em 0
      position: relative
      top: 4px
      transition: all 1s ease-in-out

      &:before
        content: ''
        display: block
        width: 40px
        height: 40px
        border-radius: 32px
        border: 4px solid #EEE
        position: absolute
        left: -60px
        top: -4px
        transition: all 1s ease-in-out

      &:after
        content: ''
        opacity: 0
        display: block
        width: 24px
        height: 18px
        position: absolute
        left: -52px
        top: 8px
        background-image: url(/img/referral-checkmark.png)
        background-size: contain
        background-repeat: no-repeat
        transition: all 1s ease-in-out

    &.active
      h2
        &:before
          background-color: $color2
          border-color:     $color2

        &:after
          opacity: 1

  .points-bar
    .points-bar-fill
      width: 100%
      height: 0
      transition: all 1s ease-in-out
      background-color: $color2


