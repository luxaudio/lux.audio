    & header
      width: 100vw
      transition: all 420ms ease-in-out
    & main
    & footer
      position: relative
      transition: all 420ms ease-in-out

section.full
  height: 110vh

  +below(400px)
    height: 105vh

a, a:visited
  color: $linkColor3

.logo
  height: 32px
  width: auto
  margin: 0

.button, button
  height: 56px
  border-radius: 28px
  transition: opacity .4s ease-in-out

  &:hover
    animation: ripple-white 1.5s infinite

  &:disabled
  &.loading
    opacity: .5
    cursor: default

    &:hover
      animation: none !important

+below(500px)
