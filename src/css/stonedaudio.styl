// Cart stuff
body
  & > cart
    color: $formTextColor
    padding: 48px 20px
    overflow: auto
    height: 100vh
    background-color: $formBGColor

    h1
      font-size: 2em
      text-align: center

    .close-cart
      position: absolute
      top: 46px
      cursor: pointer

    .product-description.product-description
      font-size: 1em !important

      &> *:last-child
        font-size: 0.9em !important

    .product-text-container.product-text-container
      width: 65%

    .product-price-container.product-price-container
      display:table
      margin-right: 0

    +below(500px)
      padding-top: 26px

      .close-cart
        top: 24px

input#open-menu
  &:checked
    & ~ header
      .menu-button
        color: $color2

    & ~ menu
      // background-color: #88f6d2
      background-color: $color3

input#open-cart
  &:checked
    & ~ header
      .cart-button
        background-image: url(/img/cart-icon-selected.svg) !important

footer
  .logo
    transform: translateX(-50%)

section
  .call-to-action
  .pre-order-button
  .share-coupon-button
