.hero
  // height: calc(121vh + 40px)
  height: calc(105vh + 100px)
  overflow: hidden
  padding: 0

  h1
    margin-bottom: 5px

  p
    font-size: 1.1em
    margin-bottom: 0

  .summary-down
    margin-top: -5px
    bottom: auto
    top: 90vh

    img
      animation: 2s ease 0s bob
      animation-iteration-count: infinite
      animation-delay: 2s
      margin-top: 10px

      &:hover
        animation-iteration-count: 1

    &:after
      content: none

  .pre-order-button
    margin-right: 10px

  .share-coupon-button
    background: transparent
    border: 4px solid $genericInputBorderColor
    margin-top: 0
    position: relative

    h3
      margin-top: -4px

    &:hover
      animation: ripple-white 1.5s infinite

  &.parallax
    .foreground
      background-size: cover
      background-repeat: no-repeat

      .animated
        animation-duration: 1.5s
        width: 100vw
        height: 100vh
        background-size: cover
        background-repeat: no-repeat
        background-position: 50% 50%

  .watch
    position: absolute
    top: 72.5vh
    left: 0
    right: 0
    margin: 0 auto
    padding-right: 40px
    // padding-left: 80px
    padding-left: 40px

    .play
      display: block
      position: absolute
      top: 50%
      left: 48px
      margin-top: -20px
      width: 40px
      height: 40px
      border-radius: 40px
      padding: 0
      background-color: rgba(0,0,0,.2)
      border: 0

      &:before
        content: ''
        display: block
        position: absolute
        top: 11px
        left: 11px
        width: 0
        height: 18px
        border-left: 1px solid $genericInputBorderColor

      &:after
        content: ''
        display: block
        position: absolute
        -webkit-transform: rotate(45deg) skew(-20deg, -20deg)
        transform: rotate(45deg) skew(-20deg, -20deg)
        top: 10px
        left: 2px
        width: 20px
        height: 20px
        border-top: 10px solid $genericInputBorderColor
        border-right: 10px solid $genericInputBorderColor
        border-bottom: 10px solid transparent
        border-left: 10px solid transparent

  .content
    margin-top: 55vh
    transform: translateY(-50%)


  +below(400px)
    height: 110vh

    .content.content
      margin-top: 45vh

    .summary-down.summary-down
      top: 80vh

    .call-to-action
    .pre-order-button
      top: 62.5vh
      margin-right: 0
      margin-bottom: 10px

    .watch
      // padding-left: 60px
      padding-left: 20px
      padding-right: 20px
      top: 62.5vh

      .play
        width: 32px
        height: 32px
        border-radius: 32px
        margin-top: -16px
        left: 42px

        &:before
          content: ''
          display: block
          position: absolute
          top: 7px
          left: 8px
          width: 0
          height: 18px
          border-left: 1px solid $genericInputBorderColor

        &:after
          top: 6px
          left: -2px

.share-coupon
  width: 500px
  max-width: 100%
  margin: 0 auto

  .share-coupon-image
    width: 500px
    height: 400px
    max-width: 100%
    background-size: cover
    background-position: center

    +below(500px)
      height: 200px

  .share-coupon-text
    color: $formTextColor
    padding: 20px
    background-color: $formBGColor
    display: table

    +below(600px)
      height: 200px

    p
      padding-bottom: 1em
      font-size: 1em

  .share-coupon-buttons
    display: table
    width: 100%

    & > *
      column 1/2 2 20px
      display: block
      height: 32px
      line-height: 2em
      margin-bottom: 1em

      +below(500px)
        column 1 1 0
        line-height: 2.5em

      i
        margin: 0 10px

    .share-coupon-button-for
      &.facebook
        background-color: #3b5998
      &.twitter
        background-color: #00aced
      &.googleplus
        background-color: #d34836
      &.pinterest
        background-color: #C92228

  .share-coupon-text.finished
    display: none

.progress
  // margin-top: calc(-20vh - 40px)
  // margin-bottom: 20vh
  z-index: 10

  .bar
    background-color: rgba(51,51,51,.9)
    height: 40px
    transition: top .1s linear
    top: 0

    &:before
      // background: radial-gradient(at top left, rgba(242, 36, 105,.50), rgba(242,36,105,0))
      // background-color: #F170CD
      // background-color: #F170A7
      background: radial-gradient(at top left, $buttonBGGradientColor1, $buttonBGGradientColor2)
      background-color: $color2
      text-align: right
      font-size: 0.8rem
      font-weight: bold
      line-height: 3.2em
      padding-right: 20px
      width: 10%

    &:after
      content: ''
      background-color: $color2
      // background-color: #F170CD
      // background-color: #F170A7
      position: absolute
      margin-left: -14px
      width: 28px
      height: 28px
      top: 6px
      transform: rotate(45deg)
      left: 10%

  +below(800px)
    .bar
      &:before
        width: 20%

      &:after
        left: 20%
        content: none

  +below(400px)
    margin-top: 0
    margin-bottom: 0

    .bar
      top: 0 !important

