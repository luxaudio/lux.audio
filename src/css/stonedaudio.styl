    height: 18px

  .button, button
    height: 36px
    border-radius: 18px

header
  height: 0
  min-height: 0

  .logo
    left: 62px
    top: 44px
    margin: 0

  label
    color: $genericTextColor

  .call-to-action
  .pre-order-button
    float: right
    margin: 32px 28px 0 0
    border: 4px solid $genericInputBorderColor
    border-radius: 28px
    font-size: 1em
    font-weight: bold
    font-family: 'Lato', sans-serif
    letter-spacing: .1em
    transition: color 420ms ease-in-out

  .menu-button
    float: left
    margin: 36px 24px 0
    font-size: 2em
    cursor: pointer
    // transition: color 420ms ease-in-out

    &:hover
      color: $genericHighlightColor

  .cart-button
    background-image: url(/img/cart-icon.svg);
    float: right;
    margin: 44px 28px 0 0
    color: $genericTextColor
    cursor: pointer
    height: 32px
    width:  32px
    background-size: contain
    background-repeat: no-repeat
    position: relative

    &:hover
      background-image: url(/img/cart-icon-selected.svg) !important

    cart
      height: 0
      width: 0
      background-color: transparent

      &:after
        content: none

      .cart-button-counter
        position: absolute
        right: -5px
        top: 0
        width: 20px
        height: 20px
        background-color: $color101
        line-height: 1.3em
        border-radius: 10px
        transform: scale(0, 0)
        transition: transform 210ms linear

        &.nonzero
          transform: scale(1, 1)

  +below(600px)
    .logo
      left: 62px

    .call-to-action
    .pre-order-button
      padding: 12px 24px 12px 24px

      .extra
        display: none

  +below(500px)
    .logo
      left: 38px
      top: 24px

    .call-to-action
    .pre-order-button
      border: 3px solid $genericInputBorderColor
      font-size: 1.2em
      line-height: 9px
      margin: 14px 0
      height: 40px
      padding: 12px

    .menu-button
      margin: 14px 12px 0
      font-size: 2em
      cursor: pointer

    .cart-button
      margin: 22px 6px
      height: 24px

      cart
        .cart-button-counter
          width: 16px
          height: 16px
          right: 0

