extends _layout.pug

block title
  | #{site.title} - Lux Earphones

block content
  section#tech-hero.hero.parallax.video
    // (data-src='https://www.youtube.com/embed/WeYsTmIzjkw')
    .foreground.product(data-ratio='-60')
      div.animated.fadeInUp(style='background-image: url(img/hero-prod.png);')
    .foreground(style='background-image: url(img/hero-overlay.png)' data-ratio='-60')
    .watch
    // .call-to-action.watch.button
      // a.play(href='#')
      // h3 WATCH&nbsp;VIDEO
    .content
      h1 Lux Earphones
      a.pre-order-button.button(href='#')
        h3 BUY NOW
      span $149 with #[strong FREE] shipping

    a#scroll-down.button.summary-down.next-section(href='#')
      img(src='img/down-icon.svg')
    // .video-modal.modal.hidden
    //   iframe(width='100%', height='100%', src='', frameborder='0', allowfullscreen)
    //   .modal-close.modal-close-position
    //     | &#10005;

    .share-coupon-modal.modal.hidden.scrolling-modal
      .modal-close
        h1 &#10005;

      .share-coupon
        .share-coupon-image(data-lazy='/img/onpage-coupon.jpeg')
        .share-coupon-text
          h2 Tell your friends to get Lux
          p.
            Share why you are getting Lux today and receive a <strong> $20
            coupon </strong> for your next pair of Lux Earphones.
          .share-coupon-buttons
            a.share-coupon-button-for.facebook(href=social.facebook.shareLink, target='_blank')
              i.fa.fa-facebook
              span Share on Facebook
            a.share-coupon-button-for.twitter(href=social.twitter.shareLink, target='_blank')
              i.fa.fa-twitter
              span Share on Twitter
            a.share-coupon-button-for.googleplus(href=social.googlePlus.shareLink, target='_blank')
              i.fa.fa-google-plus
              span Share on Google+
            a.share-coupon-button-for.pinterest(href=social.pinterest.shareLink, target='_blank')
              i.fa.fa-pinterest-p
              span Share on Pinterest
        .share-coupon-text.finished
          h2 Thanks for doing that!
          p.
            Use the coupon
            <strong> LUXFREN </strong>
            to save
            <strong> $20 </strong>
            on your next pair of Lux Earphones.
          .pre-order-button.button
            h3 GET LUX

  include _progress.pug

  section.press-strip(data-skip='true')
    .content
      div(style='background-image: url(img/press-strip/kcstar.png)')
      div(style='background-image: url(img/press-strip/abc.png)')
      div(style='background-image: url(img/press-strip/cbs.png)')
      div(style='background-image: url(img/press-strip/fox.png); height: 50px; margin-top: 35px;')
      div(style='background-image: url(img/press-strip/nbc.png); height: 56px; margin-top: 32px;')
      div(style='background-image: url(img/press-strip/yahoofinance.png)')

  section#rocking.full.list.right(data-lazy='img/rockinglow.jpg')
    .image
    .info
      h1 Audiophile sound
      p
        strong.emphasis Lux Earphones
        |  have giant drivers capable of producing rich sound, full dynamic
        | range and a wide stereo image.
      p
        | Excellent noise isolation ensures you'll enjoy crystal clear sound
        | whether you're listening to music or on a call.
      ul
        li
          div
            img(data-lazy='img/icons/freq-light.svg')
          div 20-20,000&nbsp;HZ FREQUENCY
        li
          div
            img(data-lazy='img/icons/speaker-light.svg')
          div CLEAR&nbsp;TREBLE DEEP&nbsp;BASS
        li
          div
            img(data-lazy='img/icons/speaker2-light.svg')
          div NOISE ISOLATION
        li
          div
            img(data-lazy='img/icons/microphone-light.svg')
          div HD MICROPHONE

  section#chargeup.full.list.bottom
    .content
      .image
      .info
        h1 Charge on the go
        p
          | Enjoy up to 5 hours of audio playback with a single charge and 120
          | hours on standby. Stay charged with the included
          strong.emphasis &nbsp;Lux Charging Case.
        p
          | Charges in just one hour. Recharge on the go up to six times.

        img(data-lazy='img/charging-case.png')

        ul
          li
            div
              img(data-lazy='img/icons/flash-dark.svg')
            div
              | 5&nbsp;HOUR PLAYBACK
          li
            div
              img(data-lazy='img/icons/battery-dark.svg')
            div
              | CHARGE ON THE GO
          li
            div
              img(data-lazy='img/icons/usb-dark.svg')
            div
              | CHARGE VIA&nbsp;USB
          li
            div
              img(data-lazy='img/icons/powerbank-dark.svg')
            div
              | DOUBLES&nbsp;AS
              | POWER BANK

  section#comfy.full.list.right(data-lazy='img/comfylow.jpg')
    .image
    .info
      h1 Perfect fit
      p
        strong.emphasis Lux Earphones
        | are designed to feel great and stay put â€” whether
        | you are active or relaxing. And with three customizable silicone
        | eartips, you'll be sure to find a perfect fit.
      ul
        li
          div
            img(data-lazy='img/icons/eartips-light.svg')
          div CUSTOMIZABLE EARTIPS
        li
          div
            img(data-lazy='img/icons/isolation-light.svg')
          div
            | SECURE FIT
        li
          div
            img(data-lazy='img/icons/small-light.svg')
          div COMPACT SIZE
        li
          div
            img(data-lazy='img/icons/feather-light.svg')
          div LIGHTWEIGHT

  section#ditch.full.list.left(data-lazy='img/ditchlow.jpg')
    .image
    .info
      h1 Works everywhere
      p
        strong.emphasis Lux Earphones
        | connect to all of your Bluetooth-enabled devices. Easily pair with
        | your phone, tablet, laptop or watch.
      p.
        Bluetooth 5.2 ensures you'll experience better connectivity,
        lower latency, and higher quality audio than ever before.
      ul
        li
          div
            img(data-lazy='img/icons/bluetooth-light.svg')
          div BLUETOOTH 5.2
        li
          div
            img(data-lazy='img/icons/apple-light.svg')
          div IOS
        li
          div
            img(data-lazy='img/icons/android-light.svg')
          div ANDROID
        li
          div
            img(data-lazy='img/icons/range2-light.svg')
          div 10 METER RANGE

  section#lovethem.full(data-lazy='img/lovethem2low.jpg')
    .content
      h1 Your phone will love them
      p
        | The built-in HD microphone and active noise cancellation ensures
        | you'll be heard loud and clear on calls.
      p
        | And with our iOS and Android app, you'll be able to configure EQ,
        | bass boost and more. #[strong Coming soon!]
      ul.applinks
        li
          a(href='/app', target='_blank')
            img(data-lazy='img/appstore.png')
        li
          a(href='/app', target='_blank')
            img(data-lazy='img/androidstore.png')

