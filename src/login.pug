extends _layout.pug

block title
  | #{site.title} - Login

block content
  #page-signup.page
    section.body(data-lazy='img/comfy.jpg')
      .content
        div
          input(type='radio',name='mode',id='login', checked)
          input(type='radio',name='mode',id='register')
          h1
            label(for='login') Login
            span &nbsp;|&nbsp;
            label(for='register') Register
          register(immediate-login='true')
            user-name(placeholder='Name')
            user-email(placeholder='Email')
            user-password(placeholder='Password')
            .error(if='{ errorMessage }')
              | { errorMessage }

            button(type='submit')
              | Register
          login
            user-email(placeholder='Email')
            user-password(placeholder='Password')
            .error(if='{ errorMessage }')
              | { errorMessage }

            button(type='submit')
              | Login
          a(href='reset-password') Reset Password?

block signup
