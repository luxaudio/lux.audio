extends _layout.pug

block title
  | #{site.title} - Signup

block headscript
  script(src='//www.google.com/recaptcha/api.js')

block content
  #page-signup.page
    section.body(data-lazy='img/comfy.jpg')
      .content
        div
          h1
            label Sign Up
          register(immediate-login='true')
            user-name(placeholder='Name')
            user-email(placeholder='Email')
            user-password(placeholder='Password')
            .g-recaptcha(data-sitekey='6LfX1hMUAAAAAAlNTjExftw7-GeykK2-tWjbtSUY')
            .error(if='{ errorMessage }')
              | { errorMessage }

            button(type='submit')
              | Register
          a(href='login') Already have an account?

block signup
